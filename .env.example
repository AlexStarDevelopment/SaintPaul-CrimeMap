# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Provider (optional)
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@example.com

# Application Configuration
NODE_ENV=development

# Cache Configuration (milliseconds)
CRIME_CACHE_TTL=300000  # 5 minutes default
MONGODB_CACHE_TTL=3600000  # 1 hour default

# City Configuration
CITY_AREA_SQ_MILES=56  # Saint Paul area
CITY_CENTER_LAT=44.9537
CITY_CENTER_LNG=-93.0900
DEFAULT_SEARCH_RADIUS_MILES=1

# Rate Limiting
RATE_LIMIT_AUTHENTICATED=100  # requests per minute
RATE_LIMIT_UNAUTHENTICATED=20  # requests per minute
RATE_LIMIT_BULK_ENDPOINTS=10  # requests per minute

# Database Performance
MONGODB_POOL_SIZE=10
MONGODB_POOL_MIN=2
MONGODB_TIMEOUT_MS=30000
MONGODB_MAX_IDLE_TIME_MS=300000  # 5 minutes
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_CONNECT_TIMEOUT_MS=10000

# Database Connection Optimization
ENABLE_DB_CONNECTION_POOLING=true
DB_CONNECTION_CLEANUP_INTERVAL_MS=60000  # 1 minute
DB_CONNECTION_MAX_IDLE_TIME_MS=300000    # 5 minutes

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CACHE=true
ENABLE_ERROR_REPORTING=false

# External Services (optional)
SENTRY_DSN=
GOOGLE_MAPS_API_KEY=
OPENWEATHER_API_KEY=

# Subscription Limits (optional overrides)
LIMIT_FREE_LOCATIONS=3
LIMIT_SUPPORTER_LOCATIONS=10
LIMIT_PRO_LOCATIONS=-1  # unlimited